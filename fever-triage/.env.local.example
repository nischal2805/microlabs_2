# Backend API Configuration
# For development: http://localhost:8000
# For production: your-backend-url.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
# Click on the web app icon and copy the config values
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Google Maps API Key (Optional - for location features on frontend)
# Get from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=AI Fever Diagnosis System
NEXT_PUBLIC_APP_VERSION=2.0.0

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_PHOTO_UPLOAD=true
NEXT_PUBLIC_ENABLE_LOCATION_SERVICES=true
NEXT_PUBLIC_ENABLE_DOCTOR_RECOMMENDATIONS=true

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
